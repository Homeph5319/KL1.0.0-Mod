<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:fitsSystemWindows="true" android:clipChildren="true" android:clipToPadding="true" android:layout_width="fill_parent" android:layout_height="fill_parent" style="@style/Theme.SMSWrapperBase"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="@dimen/gameloft_logo_layout_height">
        <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center" android:id="@id/gameloft_logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/wrapper_logo" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/center_menu_height"
      xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
                <TextView android:layout_gravity="center" android:id="@id/textView_wrong_code" android:layout_width="wrap_content" android:layout_height="@dimen/text_view_height" android:text="" />
                <TextView android:layout_gravity="center" android:id="@id/textView_install" android:layout_width="wrap_content" android:layout_height="@dimen/text_view_height" android:text="@string/MAINTEXT_UNLOCK_VIRTUAL_KEYPAD" />
                <android.widget.ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
                        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_width="@dimen/button_width" android:layout_height="wrap_content">
                            <EditText android:id="@id/editText_input_code" android:layout_width="fill_parent" android:layout_height="wrap_content" android:maxLines="1" android:maxLength="10" android:inputType="number" />
                        </LinearLayout>
                        <Button android:id="@id/button_confirm_code" android:text="@string/COMMAND_NEXT" style="@style/Widget.Button" />
                    </LinearLayout>
                </android.widget.ScrollView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <RelativeLayout android:layout_gravity="bottom" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/sk_back_button" android:layout_alignParentRight="true" android:layout_alignParentBottom="true">
                <Button android:id="@id/sk_back_button" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Widget.ButtonSoftkey" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
